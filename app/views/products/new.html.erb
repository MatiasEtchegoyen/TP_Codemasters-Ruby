<h1> Agregar Producto </h1>

<%= form_with model: @product do |form| %>
    <%= @product.errors.full_messages.each do |error| %>
        <div>
            <%= error%>
        </div>
    <% end %>
    <div>
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
    </div>
    <div>
    <%= form.label :descripcion %>
    <%= form.text_area :descripcion %>
    </div>
    <div>
    <%= form.label :precio %>
    <%= form.number_field :precio %>
    </div>
    <div>
    <%= form.label :imagen %>
    <%= form.text_field :imagen %>
    </div>

    <%= form.submit %>
<% end %>